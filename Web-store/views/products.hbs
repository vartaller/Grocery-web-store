<h1>Products</h1>

{{#if products.length}}
<div class="row">
    <div class="col s3" style="width : auto">
        {{#each products}}
        <a href="/products/{{id}}" target="_blank">
            <div class="card" style=" float: left; margin: 0 2rem">
                <div class="card-image">
                    <img src="{{img}}" alt="{{title}}">
                </div>
                <div class="card-content">
                    <span class="card-title">{{title}}</span>
                    <p class="price">{{price}}</p>
                </div>
                {{!-- <div class="card-action">
                    <a href="/products/{{id}}" target="_blank">More</a>
                </div> --}}
            </div>
        </a>
        {{/each}}
    </div>
</div>
{{else}}
<p>There are no products</p>
{{/if}}